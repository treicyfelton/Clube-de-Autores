- if @history.moderate == 0 || @history.moderate == 1
  .moderation
    Essa história ainda não está publicada.    
    = button_to 'Permitir publicação', "/histories/#{@history.id}/moderation", class:'allow'
    .end
    = button_to 'NÃO permitir publicação', "/histories/#{@history.id}/notallow", class:'notAllow'
    .end
-else
  %a{:href => "http://www.submarino.com.br/loja/309573/livros?WT.mc_id=menuIconeOver-Livros&WT.mc_ev=click"}
    #advertising_horizontal

.historyPage
  .showTop 
    .info
      Autor:
      - u = User.find(@history.user_id)
      = link_to u.name, "/users/#{u.id}"
      %br
      Categoria(s):
      - Category.find(@history.category_ids).each do |c|
        = c.addcategory
      %br
      Classificação:
      - cl = Classification.find(@history.classification_id)
      = cl.name
    .note
      Nota do Autor:
      = @history.note
    - if session[:id]
      .favorite   
        Adicionar aos favoritos
        #heart-fav
          %input.fav{:name => "Favorite", :type => "radio", :value => "1"}
    - if session[:id]
      .rating
        Votar nessa história
        #star-rating
          %input.rating{:name => "Vote", :type => "radio", :value => "1"}
          %input.rating{:name => "Vote", :type => "radio", :value => "2"}
          %input.rating{:name => "Vote", :type => "radio", :value => "3"}
          %input.rating{:name => "Vote", :type => "radio", :value => "4"}
          %input.rating{:name => "Vote", :type => "radio", :value => "5"}
          
    .google
      .g-plus{"data-action" => "share", "data-annotation" => "vertical-bubble", "data-height" => "60"}

    .report  
      = button_to 'Reportar história', new_contact_path, method: :get, class: "reportButton"
    .end      

  .readHistory
    .title
      = @history.title
  
    .author  
      por:
      - u = User.find(@history.user_id)
      = u.name

    .description
      = @history.description

    -if @history.historytype == 1
      %p
        = simple_format @history.ahistory
    -if @history.historytype == 2
      %img{:src => @history.comic}
        

  - if @history.moderate == 2
    .fb-comments{"data-href" => "http://clubedeautores.herokuapp.com/histories/#{@history.id}", "data-width" => "900", "num_posts" => "5"}